      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "${region}",
        "awslogs-group": "/${name}/ecs",
        "awslogs-stream-prefix": "${name}-app"
      }
    },
    "environment": [
      {
        "name": "APP_NAME",
        "value": "laravel-api"
      },
      {
